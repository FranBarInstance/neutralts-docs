{
    "data": {
        "form-login": {
            "form": {
                "attributes": {
                    "id": "login",
                    "name": "login",
                    "method": "POST",
                    "action": "/login"
                }
            },
            "fields": {
                "user": [
                    {
                        "element": "input",
                        "value": "",
                        "wrap": {
                            "attributes": {
                                "class": "my-3 border-0 d-inline-flex mdi mdi-account-outline w-100"
                            }
                        },
                        "attributes": {
                            "type": "text",
                            "name": "user",
                            "class": "w-100 border-0 border-bottom ms-2",
                            "placeholder": "User (hint: any)",
                            "required": "required"
                        }
                    }
                ],
                "passwd": [
                    {
                        "element": "input",
                        "value": "",
                        "wrap": {
                            "attributes": {
                                "class": "my-3 border-0 d-inline-flex mdi mdi-key-outline w-100"
                            }
                        },
                        "attributes": {
                            "type": "password",
                            "name": "passwd",
                            "class": "w-100 border-0 border-bottom ms-2",
                            "placeholder": "Password (hint: 1234)",
                            "required": "required"
                        }
                    }
                ],
                "example-checkbox-switch": [
                    {
                        "element": "wrap-start",
                        "tag": "div",
                        "attributes": {
                            "class": "form-check  mt-2"
                        }
                    },
                    {
                        "element": "input",
                        "value": "1",
                        "attributes": {
                            "type": "checkbox",
                            "id": "remember",
                            "name": "remember",
                            "class": "form-check-input"
                        }
                    },
                    {
                        "element": "label",
                        "text": "Remember",
                        "attributes": {
                            "class": "form-check-label",
                            "for": "remember"
                        }
                    },
                    {
                        "element": "wrap-end",
                        "tag": "div"
                    }
                ],
                "example-button": [
                    {
                        "element": "button",
                        "value": "1",
                        "text": "Sign in",
                        "attributes": {
                            "type": "submit",
                            "class": "mt-2 w-100 btn btn-primary"
                        }
                    }
                ]
            }
        }
    }
}
